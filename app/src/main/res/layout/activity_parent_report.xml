<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background -->
    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/bluestar_background"
        android:scaleType="centerCrop"
        android:contentDescription="@string/background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvReportTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Child Report"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Main card: child selector + tables -->
    <LinearLayout
        android:id="@+id/layoutReportCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#CCFFFFFF"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvReportTitle"
        app:layout_constraintBottom_toTopOf="@id/layoutActionsRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <!-- Select child -->
        <TextView
            android:id="@+id/tvSelectChild"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select a child"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:paddingBottom="4dp" />

        <Spinner
            android:id="@+id/spinnerChild"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp" />

        <!-- Button to load tables -->
        <Button
            android:id="@+id/btnViewTables"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="View progress tables"
            android:textColor="@android:color/black"
            android:padding="10dp" />

        <!-- Scroll area for progress + analytics tables -->
        <ScrollView
            android:id="@+id/scrollTables"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/layoutTablesContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- You will add rows dynamically in code -->

                <TextView
                    android:id="@+id/tvTablesPlaceholder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Progress and analytics tables will appear here."
                    android:textSize="13sp"
                    android:textColor="@android:color/black"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Row with Download PDF + Email PDF above footer -->
    <LinearLayout
        android:id="@+id/layoutActionsRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        app:layout_constraintBottom_toTopOf="@id/footerRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Download PDF (icon + text) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/btnDownloadPdf"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:cropToPadding="false"
                android:src="@drawable/pdf_icon"
                android:tint="@null"
                android:contentDescription="Download PDF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Download PDF"
                android:textSize="14sp"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- Email PDF (text button) -->
        <Button
            android:id="@+id/btnEmailPdf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="Email PDF"
            android:textColor="@android:color/black"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Footer with close (left) and home (right) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/footerRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Close pinned LEFT -->
        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="8dp"
            android:background="@android:color/transparent"
            android:contentDescription="Close"
            android:padding="0dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:cropToPadding="false"
            android:src="@drawable/close_icon"
            android:tint="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Home pinned RIGHT -->
        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="8dp"
            android:background="@android:color/transparent"
            android:contentDescription="Home"
            android:padding="0dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:cropToPadding="false"
            android:src="@drawable/home_icon"
            android:tint="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
