<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wordBuilderRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Full screen background -->
    <ImageView
        android:id="@+id/bgImageWordBuilder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/wordbuilder_background"
        android:contentDescription="Word builder background" />

    <!-- Foreground container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/wbRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp">

        <!-- Header bar -->
        <LinearLayout
            android:id="@+id/headerRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#80000000"
            android:orientation="vertical"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvWBChildName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:paddingStart="8dp"
                    android:text="Child"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvWBScore"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Score: 0"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvWBRound"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="Word 1/10"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvWBStats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="4dp"
                android:text="Correct: 0  Incorrect: 0  Played: 0  Stars: 0"
                android:textColor="@android:color/white"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- Word to spell + replay -->
        <LinearLayout
            android:id="@+id/targetWordRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#80FFFFFF"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:paddingVertical="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/headerRow">

            <TextView
                android:id="@+id/tvWBTargetWord"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="DOG"
                android:textColor="#2196F3"
                android:textSize="32sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnWBReplay"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/button_replay"
                android:contentDescription="Replay word"
                app:tint="@null"
                android:adjustViewBounds="true"
                android:scaleType="centerInside" />
        </LinearLayout>

        <!-- Grey slots on the bus whiteboard  -->
        <LinearLayout
            android:id="@+id/boardContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="#CCFFFFFF"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp"
            android:clipToPadding="false"
            app:layout_constraintTop_toBottomOf="@id/targetWordRow"
            app:layout_constraintBottom_toTopOf="@id/draggableLettersContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.65">

            <LinearLayout
                android:id="@+id/targetSlotsContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="4dp" />
        </LinearLayout>

        <!-- Tray of draggable letters: 2 rows of 4 -->
        <LinearLayout
            android:id="@+id/draggableLettersContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="46dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp"
            android:clipToPadding="false"
            app:layout_constraintBottom_toTopOf="@id/footerRow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Top row -->
            <LinearLayout
                android:id="@+id/draggableRowTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" />

            <!-- Bottom row -->
            <LinearLayout
                android:id="@+id/draggableRowBottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Home and Close icons fixed at bottom  -->
        <RelativeLayout
            android:id="@+id/footerRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageButton
                android:id="@+id/btnHomeIcon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_alignParentStart="true"
                android:background="@android:color/transparent"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:cropToPadding="false"
                android:src="@drawable/home_icon"
                app:tint="@null"
                android:contentDescription="Home" />

            <ImageButton
                android:id="@+id/btnCloseIcon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_alignParentEnd="true"
                android:background="@android:color/transparent"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:cropToPadding="false"
                android:src="@drawable/close_icon"
                app:tint="@null"
                android:contentDescription="Close game" />
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
