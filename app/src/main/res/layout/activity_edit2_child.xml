<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.EditChildActivity">

    <!-- Background image -->
    <ImageView
        android:id="@+id/bgImageEditChild"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/pastel_background"
        android:contentDescription="@string/background" />

    <!-- Top left: Close (back to ManageProfilesActivity) -->
    <ImageView
        android:id="@+id/btnCloseIcon"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/close_icon"
        android:background="@null"
        android:tint="@null"
        android:contentDescription="@string/close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Screen title centered at the top -->
    <TextView
        android:id="@+id/tvEditChildTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/edit_child_profile"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Top right: Home (back to ParentDashboardActivity) -->
    <ImageView
        android:id="@+id/btnHomeIcon"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/home_icon"
        android:background="@null"
        android:tint="@null"
        android:contentDescription="@string/home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Main scrollable content so small screens can scroll -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvEditChildTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Card for avatar selection -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAvatar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center_horizontal">

                    <!-- Big selected avatar preview.
                         Default = ic_child_avatar_placeholder.
                         When parent taps, the small avatar gallery below will show or hide. -->
                    <ImageView
                        android:id="@+id/imgSelectedAvatar"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/ic_child_avatar_placeholder"
                        android:contentDescription="@string/choose_avatar"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/tvAvatarHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/choose_avatar"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary" />

                    <!-- Avatar grid (mini gallery).
                         Starts hidden and shows when big avatar is tapped. -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerAvatars"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:nestedScrollingEnabled="false"
                        android:visibility="gone" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Child name -->
            <EditText
                android:id="@+id/editTextChildName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/child_name"
                android:inputType="textCapWords"
                android:maxLength="30"
                android:background="@android:color/white"
                android:padding="10dp"
                android:layout_marginTop="4dp" />

            <!-- Child age -->
            <EditText
                android:id="@+id/editTextChildAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/child_age"
                android:inputType="number"
                android:maxLength="2"
                android:background="@android:color/white"
                android:padding="10dp"
                android:layout_marginTop="8dp" />

            <!-- Gender dropdown -->
            <AutoCompleteTextView
                android:id="@+id/spinnerGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/gender"
                android:inputType="text"
                android:background="@android:color/white"
                android:padding="10dp"
                android:layout_marginTop="8dp" />

            <!-- Learning level dropdown -->
            <AutoCompleteTextView
                android:id="@+id/spinnerLearningLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/learning_level"
                android:inputType="text"
                android:background="@android:color/white"
                android:padding="10dp"
                android:layout_marginTop="8dp" />

            <!-- Custom words label -->
            <TextView
                android:id="@+id/tvWordsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/custom_words_label"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_marginTop="12dp" />

            <!-- Four custom words (max 8 characters each) -->
            <EditText
                android:id="@+id/editTextWord1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/word_1"
                android:inputType="textCapCharacters"
                android:maxLength="8"
                android:background="@android:color/holo_blue_dark"
                android:padding="10dp"
                android:layout_marginTop="4dp" />

            <EditText
                android:id="@+id/editTextWord2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/word_2"
                android:inputType="textCapCharacters"
                android:maxLength="8"
                android:background="@android:color/holo_blue_dark"
                android:padding="10dp"
                android:layout_marginTop="4dp" />

            <EditText
                android:id="@+id/editTextWord3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/word_3"
                android:inputType="textCapCharacters"
                android:maxLength="8"
                android:background="@android:color/white"
                android:padding="10dp"
                android:layout_marginTop="4dp" />

            <EditText
                android:id="@+id/editTextWord4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/word_4"
                android:inputType="textCapCharacters"
                android:maxLength="8"
                android:background="@android:color/white"
                android:padding="10dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp" />

            <!-- Save button -->
            <Button
                android:id="@+id/buttonSaveChild"
                android:layout_width="192dp"
                android:layout_height="47dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="40dp"
                android:text="@string/save_child_profile"
                android:textAllCaps="false" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
