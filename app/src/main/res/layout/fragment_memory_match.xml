<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/memoryMatchRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Full screen magical grotto background -->
    <ImageView
        android:id="@+id/bgImageMemory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/junglegrotto_background"
        android:contentDescription="Background" />

    <!-- Main Memory Match UI -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/tvMMScore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Score: 0"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvMMAttempts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Attempts: 0"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvMMStars"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Stars: 0"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvMMTimer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="Time: 00:00"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Spacer that pushes cards down into lower half -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Card grid -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewMemoryMatch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:clipToPadding="false" />

        <!-- Bottom spacer to adjust card height -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5" />
    </LinearLayout>

</FrameLayout>
