<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ManageProfilesActivity">

    <!-- Background image -->
    <ImageView
        android:id="@+id/bgImageManageProfiles"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/pastel_background"
        android:contentDescription="@string/background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Title bar -->
    <TextView
        android:id="@+id/tvManageProfilesTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Manage Child Profiles"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Scrollable list of 5 fixed child cards -->
    <ScrollView
        android:id="@+id/scrollChildren"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvManageProfilesTitle"
        app:layout_constraintBottom_toTopOf="@id/layoutBottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Child slot 1 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardChild1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <!-- Avatar -->
                    <ImageView
                        android:id="@+id/imgChild1"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:src="@drawable/ic_child_placeholder"
                        android:scaleType="centerCrop"
                        android:layout_alignParentStart="true"
                        android:contentDescription="@string/child_avatar" />

                    <!-- Name -->
                    <TextView
                        android:id="@+id/txtChildName1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Child 1"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginStart="12dp"
                        android:layout_toEndOf="@id/imgChild1" />

                    <!-- Info -->
                    <TextView
                        android:id="@+id/txtChildInfo1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Age 0 • Beginner • Words:"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_below="@id/txtChildName1"
                        android:layout_marginStart="12dp"
                        android:layout_toEndOf="@id/imgChild1" />

                    <!-- Edit icon top right -->
                    <ImageView
                        android:id="@+id/imgEdit1"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/button_edit"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:contentDescription="@string/edit" />

                    <!-- Delete icon below edit -->
                    <ImageView
                        android:id="@+id/imgDelete1"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/button_delete"
                        android:layout_below="@id/imgEdit1"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="4dp"
                        android:contentDescription="@string/delete" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Child slot 2 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardChild2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <!-- Avatar -->
                    <ImageView
                        android:id="@+id/imgChild2"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:src="@drawable/ic_child_placeholder"
                        android:scaleType="centerCrop"
                        android:layout_alignParentStart="true"
                        android:contentDescription="@string/child_avatar" />

                    <!-- Name -->
                    <TextView
                        android:id="@+id/txtChildName2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Child 2"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginStart="12dp"
                        android:layout_toEndOf="@id/imgChild2" />

                    <!-- Info -->
                    <TextView
                        android:id="@+id/txtChildInfo2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Age 0 • Beginner • Words:"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_below="@id/txtChildName2"
                        android:layout_marginStart="12dp"
                        android:layout_toEndOf="@id/imgChild2" />

                    <!-- Edit icon top right -->
                    <ImageView
                        android:id="@+id/imgEdit2"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/button_edit"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:contentDescription="@string/edit" />

                    <!-- Delete icon below edit -->
                    <ImageView
                        android:id="@+id/imgDelete2"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/button_delete"
                        android:layout_below="@id/imgEdit2"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="4dp"
                        android:contentDescription="@string/delete" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Child slot 3 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardChild3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <!-- Avatar -->
                    <ImageView
                        android:id="@+id/imgChild3"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:src="@drawable/ic_child_placeholder"
                        android:scaleType="centerCrop"
                        android:layout_alignParentStart="true"
                        android:contentDescription="@string/child_avatar" />

                    <!-- Name -->
                    <TextView
                        android:id="@+id/txtChildName3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Child 3"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginStart="12dp"
                        android:layout_toEndOf="@id/imgChild3" />

                    <!-- Info -->
                    <TextView
                        android:id="@+id/txtChildInfo3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Age 0 • Beginner • Words:"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_below="@id/txtChildName3"
                        android:layout_marginStart="12dp"
                        android:layout_toEndOf="@id/imgChild3" />

                    <!-- Edit icon top right -->
                    <ImageView
                        android:id="@+id/imgEdit3"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/button_edit"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:contentDescription="@string/edit" />

                    <!-- Delete icon below edit -->
                    <ImageView
                        android:id="@+id/imgDelete3"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/button_delete"
                        android:layout_below="@id/imgEdit3"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="4dp"
                        android:contentDescription="@string/delete" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Child slot 4 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardChild4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <!-- Avatar -->
                    <ImageView
                        android:id="@+id/imgChild4"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:src="@drawable/ic_child_placeholder"
                        android:scaleType="centerCrop"
                        android:layout_alignParentStart="true"
                        android:contentDescription="@string/child_avatar" />

                    <!-- Name -->
                    <TextView
                        android:id="@+id/txtChildName4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Child 4"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginStart="12dp"
                        android:layout_toEndOf="@id/imgChild4" />

                    <!-- Info -->
                    <TextView
                        android:id="@+id/txtChildInfo4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Age 0 • Beginner • Words:"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_below="@id/txtChildName4"
                        android:layout_marginStart="12dp"
                        android:layout_toEndOf="@id/imgChild4" />

                    <!-- Edit icon top right -->
                    <ImageView
                        android:id="@+id/imgEdit4"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/button_edit"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:contentDescription="@string/edit" />

                    <!-- Delete icon below edit -->
                    <ImageView
                        android:id="@+id/imgDelete4"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/button_delete"
                        android:layout_below="@id/imgEdit4"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="4dp"
                        android:contentDescription="@string/delete" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Child slot 5 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardChild5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <!-- Avatar -->
                    <ImageView
                        android:id="@+id/imgChild5"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:src="@drawable/ic_child_placeholder"
                        android:scaleType="centerCrop"
                        android:layout_alignParentStart="true"
                        android:contentDescription="@string/child_avatar" />

                    <!-- Name -->
                    <TextView
                        android:id="@+id/txtChildName5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Child 5"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginStart="12dp"
                        android:layout_toEndOf="@id/imgChild5" />

                    <!-- Info -->
                    <TextView
                        android:id="@+id/txtChildInfo5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Age 0 • Beginner • Words:"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_below="@id/txtChildName5"
                        android:layout_marginStart="12dp"
                        android:layout_toEndOf="@id/imgChild5" />

                    <!-- Edit icon top right -->
                    <ImageView
                        android:id="@+id/imgEdit5"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/button_edit"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:contentDescription="@string/edit" />

                    <!-- Delete icon below edit -->
                    <ImageView
                        android:id="@+id/imgDelete5"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/button_delete"
                        android:layout_below="@id/imgEdit5"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="4dp"
                        android:contentDescription="@string/delete" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Bar -->
    <LinearLayout
        android:id="@+id/layoutBottomBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnCloseIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/close_icon"
            android:scaleType="fitCenter" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/btnHomeIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/home_icon"
            android:scaleType="fitCenter" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
