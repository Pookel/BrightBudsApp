<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bluestar_background"
    tools:context=".activities.ReportsDashboardActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitleReports"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reports and Analytics"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginTop="18dp"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 2x2 Grid for the four report buttons -->
    <GridLayout
        android:id="@+id/gridReports"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:columnCount="2"
        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true"
        app:layout_constraintTop_toBottomOf="@id/tvTitleReports"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="24dp">

        <!-- View Report for One Child -->
        <LinearLayout
            android:id="@+id/btnChildProfileReport"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="126dp"
                android:layout_height="137dp"
                android:adjustViewBounds="true"
                android:src="@drawable/button_childprofile"
                android:tint="@null" />

            <!-- TEXT COLOR CHANGED TO DARK BLUE -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Child Report"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- View Report for All Children -->
        <LinearLayout
            android:id="@+id/btnLevelReport"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="111dp"
                android:layout_height="127dp"
                android:adjustViewBounds="true"
                android:src="@drawable/button_level"
                android:tint="@null" />

            <!-- TEXT COLOR CHANGED TO DARK BLUE -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Children"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Charts -->
        <LinearLayout
            android:id="@+id/btnCharts"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="112dp"
                android:layout_height="138dp"
                android:adjustViewBounds="true"
                android:src="@drawable/chart_icon"
                android:tint="@null" />

            <!-- TEXT COLOR CHANGED TO DARK BLUE -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Charts"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- PDF Report -->
        <LinearLayout
            android:id="@+id/btnPdfReport"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="138dp"
                android:adjustViewBounds="true"
                android:src="@drawable/pdf_icon"
                android:tint="@null" />

            <!-- TEXT COLOR CHANGED TO DARK BLUE -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PDF Report"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

    </GridLayout>

    <!-- Bottom bar with Close (left) + Home (right) -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Close on left -->
        <ImageView
            android:id="@+id/btnCloseReports"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/close_icon"
            android:tint="@null"
            android:background="@android:color/transparent" />

        <!-- Spacer to push Home icon to the far right -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Home on right -->
        <ImageView
            android:id="@+id/btnHomeReports"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@android:color/transparent"
            android:src="@drawable/home_icon"
            android:tint="@null" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
